<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginVertical="2dp">

    <ImageView
        android:id="@+id/image_recycler_item"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="4dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/text_recycler_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:singleLine="true"
        android:textSize="20sp"
        app:layout_constraintLeft_toRightOf="@id/image_recycler_item"
        app:layout_constraintStart_toStartOf="@+id/image_recycler_item"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="샘플 텍스트" />

    <TextView
        android:id="@+id/text_recycler_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="2021-12-29" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey"
        app:layout_constraintBottom_toBottomOf="parent">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>